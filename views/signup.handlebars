{{!-- view for signup --}}
<div class="card">
  <header class="card-header">
    <h2 class="card-header-title">Sign Up</h2>
  </header>
  <div id="signup" role="tabpanel">
    {{!-- signup form --}}
    <form id="signup-form" class="card-content">
      {{!-- form input for username --}}
      <div class="field">
        <label class="label" for="username-input-signup">Username</label>
        <div class="control">
          <input type="text" id="username-input-signup" class="input" />
        </div>
      </div>
      {{!-- form input for password --}}
      <div class="field">
        <label class="label" for="password-input-signup">Password</label>
        <div class="control">
          <input type="password" id="password-input-signup" class="input" />
        </div>
      </div>
      {{!-- form submission --}}
      <div class="field">
        <div class="control">
          <button type="submit" id="signup-btn" class="button main-color">Signup!</button>
        </div>
      </div>
      <div class="field">
        <p>Already a member?</p>
        <div class="control">
          <a href="/login" class="button is-text">Login</a>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>